{
  "name": "file-explorer-expand-recursively",
  "displayName": "File Explorer Expand Recursively",
  "description": "Recursively expand folder nodes in VS Code file explorer",
  "version": "1.0.0",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "url": "https://github.com/MetroSoft-Application/file-explorer-expand-recursively"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "file explorer",
    "expand",
    "recursive",
    "folder",
    "tree",
    "navigation",
    "expand all",
    "file tree",
    "workspace",
    "directory"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileExplorer.expandRecursively",
        "title": "Expand Recursively",
        "icon": "$(expand-all)"
      },
      {
        "command": "fileExplorer.showExpandedView",
        "title": "Show Expanded File Tree",
        "icon": "$(list-tree)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "expandedFileTree",
          "name": "Expanded File Tree",
          "when": "expandedFileTreeEnabled"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "fileExplorer.expandRecursively",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "fileExplorer.expandRecursively"
        },
        {
          "command": "fileExplorer.showExpandedView"
        }
      ],
      "view/title": [
        {
          "command": "fileExplorer.showExpandedView",
          "when": "view == expandedFileTree",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "typescript": "^5.2.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.4"
  }
}
